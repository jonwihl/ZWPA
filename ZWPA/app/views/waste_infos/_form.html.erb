<%= simple_form_for(@waste_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category %>
    <%= f.input :true_category %>
    <%= f.input :weight %>
    <%= f.input :notes %>
    <%= f.input :anomaly %>
    <%= f.input :timestamp %>
    <%= f.input :active %>
    <%= f.association :area %>
    <%= f.association :material_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
