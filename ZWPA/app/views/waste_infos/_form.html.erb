<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s2"><a href="#c1" class="teal-text text-darken-2">Landfill</a></li>
            <li class="tab col s2"><a href="#c2" class="teal-text text-darken-2">Recycle</a></li>
            <li class="tab col s2"><a href="#c3" class="teal-text text-darken-2">Compost</a></li>
            <li class="tab col s2"><a href="#c4" class="teal-text text-darken-2">Reuse</a></li>
            <li class="tab col s2"><a href="#c5" class="teal-text text-darken-2">Food Recovery</a></li>
        </ul>
    </div>
</div><br>

<div class="row">
    <div id="c1" >
      <%= simple_form_for(@waste_info) do |f| %>
        <%= f.error_notification %>
        <%= f.input :category, as: :hidden, input_html: { value: "landfill"} %>
        <%= f.input :weight, wrapper_html: { class: 'col s6' } %>
        <%= f.input :true_category, collection: WasteInfo::CATEGORIES, as: :select, wrapper_html: { class: 'col s6' } %>
        <%= f.association :material_type, wrapper_html: { class: 'col s6' } %>
        <%= f.input :anomaly, collection: [true, false], as: :select, wrapper_html: { class: 'col s6' } %>
        <%= f.input :notes, wrapper_html: { class: 'col s12' } %>
        <br><br>

        <%= f.button :submit, class: "btn waves-effect waves-light right"%>   
             
      <% end %>

    </div>


    <div id="c2" class="col s12">
    </div>


    <div id="c3" class="col s12">
    </div>

    <div id="c4" class="col s12">
    </div>

    <div id="c5" class="col s12">
    </div>


</div>