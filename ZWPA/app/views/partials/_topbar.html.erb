<div class="row valign-wrapper" id="topbar">
  <div class="col s1">
    <%= link_to(image_tag('logos/riss_logo.png'), home_path) %>
  </div>
  <div class="col s10">
    <ul class="right">
    	<% if logged_in? %>
			<li><%= link_to 'Logout', logout_path, class: "btn" %></li>
		<% else %>
			<li><%= link_to 'Login', login_path, class: "btn" %></li>
		<% end %>
	</ul>
  </div>
  <div class="col s1">
    &nbsp;
  </div>
</div>