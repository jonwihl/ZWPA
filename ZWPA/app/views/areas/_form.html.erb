<%= simple_form_for(@area) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %><br>
    
    <%= render :partial => "partials/error", locals: {f: f} %><br>
    <%= f.input :name %>
    <%= f.association :audit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
