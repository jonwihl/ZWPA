<h5>Archived users</h3>

<table id = "userlist" class="display">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Active</th>
      <th>Edit</th>
      <th>Reactivate</th>
    </tr>
  </thead>

  <tbody>
    <% @users.inactive.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.active %></td>
        <td><%= link_to material_icon.edit, edit_user_path(user), :style => "color:#ff9800;" %></td>
        <td><%= link_to material_icon.unarchive, reactivate_user_path(user), :style => "color:#ACD1CF;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>





