<h5>Active users</h3>

<table id = "userlist" class="display">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Active</th>
      <th>Edit</th>
      <th>Archive</th>
    </tr>
  </thead>

  <tbody>
    <% @users.active.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.active %></td>
        <td><%= link_to material_icon.edit, edit_user_path(user), :style => "color:#ff9800;" %></td>
        <td><%= link_to material_icon.archive, archive_user_path(user), :style => "color:#ef5350;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
