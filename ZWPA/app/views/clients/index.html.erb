<h5>Active Clients</h3>

<table id = "clientlist" class="display">
  <thead>
    <tr>
      <th>Client</th>
      <th>Contact Name</th>
      <th>Contact Phone</th>
      <th>Contact Email</th>
      <th>Address</th>
      <th>Edit</th>
      <th>Archive</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.active.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.proper_name_title %></td>
        <td><%= client.contact_phone %></td>
        <td><%= client.contact_email %></td>
        <td><%= client.proper_address %></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: :"btn-flat  waves-effect waves-light teal lighten-4" %></td>
        <td><%= link_to 'Archive', archive_client_path(client), class: :"btn-flat waves-effect waves-light #ffcdd2 red lighten-4" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<br>


