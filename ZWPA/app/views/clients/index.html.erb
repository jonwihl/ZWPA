<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#c1" class="teal-text text-darken-2">Active Clients</a></li>
            <li class="tab col s6"><a href="#c2" class="teal-text text-darken-2">Archived Clients</a></li>
        </ul>
    </div>
</div>
<br>

<div class="row">
    <div id="c1" class="col s12">
        <table id = "clientlist" class="display">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Contact Name</th>
                    <th>Contact Phone</th>
                    <th>Contact Email</th>
                    <th>Address</th>
                    <th style="text-align:center">Edit</th>
                    <th style="text-align:center">Archive</th>
                </tr>
            </thead>

            <tbody>
                <% @clients.active.each do |client| %>
                    <tr>
                        <td><%= client.name %></td>
                        <td><%= client.proper_name_title %></td>
                        <td><%= client.contact_phone %></td>
                        <td><%= client.contact_email %></td>
                        <td><%= client.proper_address %></td>
                        <td style="text-align:center"><%= link_to material_icon.edit, edit_client_path(client), :style => "color:#ff9800;" %></td>
                        <td style="text-align:center"><%= link_to material_icon.archive, archive_client_path(client), :style => "color:#ef5350;" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div id="c2" class="col s12">
        <table id = "archiveclintlist" class="display">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Contact Name</th>
                    <th>Contact Phone</th>
                    <th>Contact Email</th>
                    <th>Address</th>
                    <th style="text-align:center">Reactivate</th>
                </tr>
            </thead>  

            <tbody>
                <% @clients.inactive.each do |client| %>
                    <tr>
                        <td><%= client.name %></td>
                        <td><%= client.proper_name_title %></td>
                        <td><%= client.contact_phone %></td>
                        <td><%= client.contact_email %></td>
                        <td><%= client.proper_address %></td>
                        <td style="text-align:center"><%= link_to material_icon.unarchive, reactivate_client_path(client), :style => "color:#ACD1CF;" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<br>

<div class="row">
    <%= link_to 'New Client', new_client_path, class: :"btn waves-effect waves-light right" %>
</div>
<br>



