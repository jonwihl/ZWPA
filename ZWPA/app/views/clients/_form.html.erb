                          <%= f.input :contact_last_name, wrapper_html: { class: 'col s6' } %>
                          <%= f.input :contact_title, wrapper_html: { class: 'col s12' } %>
                          <%= f.input :contact_phone, wrapper_html: { class: 'col s12' } %>

                        </div>
                            
                        <div class="col s12">
                            <div class="btn waves-effect waves-light"> Back</a>
