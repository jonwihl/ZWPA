                    <%= simple_form_for @client do |f| %>
                        <br>

                        <%= render :partial => "partials/error", locals: {f: f} %>
                        <br>
                        <div class="col s6">
                          <%= f.input :street_1, wrapper_html: { class: 'col s12'} %>
                          <%= f.input :street_2, wrapper_html: { class: 'col s12' } %> 

                          <%= f.input :city, wrapper_html: { class: 'col s6' } %>
